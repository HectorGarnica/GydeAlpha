<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="1dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/topic_item_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        `

        <ImageView
            android:id="@+id/skill_icons"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/student_life"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/gridTextViewTopic"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/skill_icons"
            android:layout_alignEnd="@+id/skill_icons"
            android:layout_alignBottom="@+id/skill_icons"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#9F5A5A5A"
            android:gravity="center|top"
            android:padding="3dp"
            android:textColor="@color/colorActionBar"
            android:textSize="16sp"
            tools:text="Student Life" />

        <ImageView
            android:id="@+id/checked"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:layout_alignTop="@+id/skill_icons"
            android:layout_alignEnd="@+id/skill_icons"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:srcCompat="@drawable/fui_ic_check_circle_black_128dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>